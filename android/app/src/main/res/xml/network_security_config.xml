<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for local development (Metro server) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android Emulator -->
        <domain includeSubdomains="true">192.168.30.125</domain> <!-- Physical Device -->
    </domain-config>

    <!-- Allow connections to Google APIs -->
    <domain-config>
        <domain includeSubdomains="true">maps.googleapis.com</domain>
    </domain-config>

    <!-- Trust system certificates for all other connections, but disallow cleartext -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
